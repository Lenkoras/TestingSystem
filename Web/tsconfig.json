{
    "compileOnSave": false,
    "compilerOptions": {
        "removeComments": true,
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2022",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2022",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/**/*.ts",
        "src/**/*.d.ts"
    ]
}